<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="528" Width="900" ResizeMode="NoResize">
    <Grid Margin="0,-6,0,6">
        <DataGrid x:Name="datagrid1" Margin="10,80,234,4" SelectedItem="{Binding SelectedBlacklistItem}"></DataGrid>
        <Button Command="{Binding Add}" Content="Добавить" HorizontalAlignment="Left" Margin="680,128,0,0" VerticalAlignment="Top" Width="197" Height="52"/>
        <Button Command="{Binding Delete}" Content="Удалить" HorizontalAlignment="Left" Margin="680,205,0,0" VerticalAlignment="Top" Width="197" Height="52"/>
        <Label Content="Группа ID:" HorizontalAlignment="Left" Height="26" Margin="10,28,0,0" VerticalAlignment="Top" Width="73"/>
        <Label Content="" HorizontalAlignment="Left" Margin="88,28,0,0" VerticalAlignment="Top" Width="24"/>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="680,80,0,0" TextWrapping="Wrap" Text="{Binding AddBlacklistItem}" FontSize="16" VerticalAlignment="Top" Width="197"/>
    </Grid>
</Window>
